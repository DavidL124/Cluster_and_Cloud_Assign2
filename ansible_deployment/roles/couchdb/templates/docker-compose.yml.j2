version: "3"
services:
  couch_master:
    image: "ibmcom/couchdb3:3.2.1"
    restart: always
    ports:
      - "5984:5984"
      - "5986:5986"
      - "4369:4369"
      - "9100-9200:9100-9200"
    # links:
    #   - couch_worker1
    #   - couch_worker2
    volumes:
      - data_master:/opt/couchdb/data
    environment:
      - COUCHDB_USER= {{ database_user }}
      - COUCHDB_PASSWORD= {{ database_password }}
      - NODENAME=172.20.0.2
    container_name: couch_master
    networks:
      couchdb_nw:
        ipv4_address: 172.20.0.2

